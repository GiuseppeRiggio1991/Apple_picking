%Port Controlled Hamiltonian System
%
\newcommand{\pch}{\left\{
  \begin{array}{l}
   \dot{x}=J(x)\displaystyle\frac{\partial{H}}{\partial{x}}+G(x)u\\
   \\
   y=G^T(x)\displaystyle\frac{\partial{H}}{\partial{x}}
  \end{array}
\right.}
%
%Port Controlled Hamiltonian System With Dissipation
%
\newcommand{\pchd}{
  \left\{
  \begin{array}{l}
   \dot{x}=(J(x)-R(x))\displaystyle\frac{\partial{H}}{\partial{x}}+G(x)u\\
   \\
   y=G^T(x)\displaystyle\frac{\partial{H}}{\partial{x}}
  \end{array}
\right.}
